{
	"manifest_version" : 2,
	"name"             : "Popup! Popup!",
	"version"          : "0.3.0",
	"description"      : "Open any URL in a popup",
	"applications"     : {
		"gecko" : {
			"id" : "{e8e1c2b5-60ae-45cf-b927-3ed3e6c50267}"
		}
	},
	"icons"            : {
		"16" : "icons/logo.svg"
	},
	"background"       : {
		"scripts" : [
			"lib/main.js",
			"background/background.js"
		]
	},
	"options_ui" : {
		"page" : "options/options.html"
	},
	"browser_action" : {
		"default_title": "Popup! Popup!",
		"default_popup": "browser_action/browser_action.html",
		"browser_style": true,
		"default_icon" : "icons/logo.svg"
	},
	"permissions" : [
		"menus",
		"contextMenus",
		"activeTab",
		"tabs",
		"storage"
	]
}